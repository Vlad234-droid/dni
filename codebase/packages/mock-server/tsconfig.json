{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "typeRoots": ["./src/types", "../../node_modules/@types"],
    "baseUrl": "./src",
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strictPropertyInitialization": false
  },
  "include": ["./src/**/*"]
}
