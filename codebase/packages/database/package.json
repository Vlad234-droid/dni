{
  "name": "@dni/database",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "files": [
    "build"
  ],
  "main": "./build/index.js",
  "types": "./build/index.d.ts",
  "scripts": {
    "build:prod": "tsc -p .",
    "clean": "rimraf build coverage storybook-static .eslintcache",
    "clean:all": "yarn clean && rimraf node_modules",
    "start": "ts-node src/index.ts",
    "typeorm": "ts-node --transpile-only ../../node_modules/typeorm/cli.js --config ./src/ormconfig.ts",
    "entity:create": "yarn typeorm entity:create -n",
    "subscriber:create": "yarn typeorm subscriber:create -n",
    "query": "yarn typeorm query",
    "version": "yarn typeorm version",
    "cache:clear": "yarn typeorm cache:clear",
    "schema:sync": "yarn typeorm schema:sync",
    "schema:log": "yarn typeorm schema:log",
    "schema:drop": "yarn typeorm schema:drop",
    "migration:generate": "yarn typeorm migration:generate -n",
    "migration:create": "yarn typeorm migration:create -n",
    "migration:show": "yarn typeorm migration:show",
    "migration:run": "yarn typeorm  migration:run",
    "migration:revert": "yarn typeorm migration:revert",
    "docker:compose:up": "docker-compose pull && env-cmd -f .env docker-compose up -d",
    "docker:compose:start": "docker-compose start",
    "docker:compose:down": "docker-compose down"
  },
  "dependencies": {
    "dotenv": "^8.2.0",
    "pg": "^8.6.0",
    "pino": "^6.11.3",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.2.32"
  },
  "devDependencies": {
    "@types/node": "^14.14.41",
    "@types/pg": "^7.14.11",
    "env-cmd": "^10.1.0",
    "ts-node": "^9.1.1"
  }
}
